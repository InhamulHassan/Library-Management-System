<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners
                android:radius="3dp"/>
            <size
                android:height="150dp"
                android:width="150dp"/>
            <solid
                android:color="@color/white"/>
            <stroke
                android:color="@color/green"
                android:width="1dp"/>
            <padding
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
                android:left="5dp"/>
            <gradient
                android:startColor="@color/white"
                android:centerColor="@color/white"
                android:endColor="@color/whiteTransparent"
                android:type="linear"
                android:angle="270"
                android:centerX="0.1"
                android:centerY="0.5"/>
        </shape>
        <ripple android:color="@color/greyTransparent" android:radius="5dp"/>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="3dp"/>
            <size
                android:height="150dp"
                android:width="150dp"/>
            <solid
                android:color="@color/white"/>
            <stroke
                android:color="@color/green"
                android:width="1dp"/>
            <padding
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
                android:left="5dp"/>
        </shape>
        <ripple android:color="@color/greyTransparent" android:radius="5dp"/>
    </item>

</selector>